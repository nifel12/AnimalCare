<div class="login">
<h1> REGISTRAR MASCOTA </h1>

<form method="post" class="form" >
    
        <input type="hidden" asp-for = "mascota.Id" />
        <label asp-for="mascota.Nombre" class="label"></label>
        <input asp-for="mascota.Nombre" class="inputs">
        <label asp-for="mascota.Color" class="label"></label>
        <input asp-for="mascota.Color" class="inputs">
        <label asp-for="mascota.Especie" class="label"></label>
        <input asp-for="mascota.Especie" class="inputs">
        <label asp-for="mascota.Raza" class="label"></label>
        <input asp-for="mascota.Raza" class="inputs">

        <label for="dueno" class="label">Dueño</label>
        <select class="inputse" id="dueno" asp-for ="mascota.Dueno.Id" name = "duenoId" >
            <option value="0">Seleccione un Dueño</option>
            @foreach (var dueno in Model.listaDuenos)
            {
                <option value="@dueno.Id">@dueno.Nombres @dueno.Apellidos </option>
            }
        </select>
        <label for="veterinario" class="label">Veterinario</label>
        <select  class="inputse" id="veterinario" asp-for ="mascota.Veterinario.Id" name = "veterinarioId" >
            <option value="0">Seleccione un Veterinario</option>
            @foreach (var veterinario in Model.listaVeterinarios)
            {
                <option value="@veterinario.Id">@veterinario.Nombres @veterinario.Apellidos </option>
            }
        </select>


        <button type="submit" class="primary-button login-button">Guardar</button>
   

</form>
</div>

